<Window x:Class="h4_raadspel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:h4_raadspel"
        mc:Ignorable="d"
        Title="Raadspel" Height="390" Width="800">
    <Grid Margin="0,0,0,44">
        <Label Content="Raad zo snel mogelijk een getal tussen 0 en 100!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
        <Button x:Name="calculateButton" Content="Start" HorizontalAlignment="Left" Margin="130,256,0,0" VerticalAlignment="Top" FontSize="16" Height="40" Width="119" Click="calculateButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="563,255,0,0" VerticalAlignment="Top" FontSize="16" Height="41" Width="119" Click="closeButton_Click"/>

    </Grid>
</Window>
